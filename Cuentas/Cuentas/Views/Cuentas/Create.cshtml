@model Cuentas.Models.Cuenta

@{
    ViewData["Title"] = "Crear";
}

<h1 class="text-dark mb-2">Crear Cuenta</h1>
<h4 class="text-muted mb-4">Nueva Cuenta</h4>

<div class="d-flex justify-content-center">
    <div class="card shadow-sm p-4" style="width: 40rem; background: #ffffff; border-radius: 12px;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-12 mb-3">
                    <label asp-for="numero" class="form-label text-dark"></label>
                    <input asp-for="numero" class="form-control"
                           style="background:#e8ecef; color:#000;" />
                    <span asp-validation-for="numero" class="text-danger"></span>
                </div>

                <div class="col-12 mb-3">
                    <label asp-for="descripcion" class="form-label text-dark"></label>
                    <input asp-for="descripcion" class="form-control"
                           style="background:#e8ecef; color:#000;" />
                    <span asp-validation-for="descripcion" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="creditos" class="form-label text-dark"></label>
                    <input asp-for="creditos" class="form-control"
                           style="background:#e8ecef; color:#000;" />
                    <span asp-validation-for="creditos" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="debitos" class="form-label text-dark"></label>
                    <input asp-for="debitos" class="form-control"
                           style="background:#e8ecef; color:#000;" />
                    <span asp-validation-for="debitos" class="text-danger"></span>
                </div>

                <div class="col-12 mb-4">
                    <label asp-for="balance" class="form-label text-dark"></label>
                    <input asp-for="balance" class="form-control"
                           style="background:#e8ecef; color:#000;" />
                    <span asp-validation-for="balance" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">← Regresar</a>
                <input type="submit" value="Crear Cuenta" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
