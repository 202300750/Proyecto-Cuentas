@model Cuentas.Models.Cuenta

@{
    ViewData["Title"] = "Editar";
}

<h1 class="text-center mb-4">Editar Cuenta</h1>

<div class="edit-container">

    <div class="card shadow-sm p-4">

        <h4 class="text-secondary mb-3">Datos de la cuenta</h4>
        <hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="numero" class="form-label small"></label>
                    <input asp-for="numero" class="form-control form-control-sm bg-light" readonly />
                    <span asp-validation-for="numero" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="descripcion" class="form-label small"></label>
                    <input asp-for="descripcion" class="form-control form-control-sm" />
                    <span asp-validation-for="descripcion" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="creditos" class="form-label small"></label>
                    <input asp-for="creditos" class="form-control form-control-sm" />
                    <span asp-validation-for="creditos" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="debitos" class="form-label small"></label>
                    <input asp-for="debitos" class="form-control form-control-sm" />
                    <span asp-validation-for="debitos" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="balance" class="form-label small"></label>
                    <input asp-for="balance" class="form-control form-control-sm" />
                    <span asp-validation-for="balance" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-3 d-flex gap-2 align-items-center">

                @if (Model.balance >= 0)
                {
                    <button type="submit"
                            class="btn btn-primary-soft px-4">
                        Guardar cambios
                    </button>
                }
                else
                {
                    <span class="text-danger small">
                         No se puede editar una cuenta con balance negativo
                    </span>
                }

                <a asp-action="Index" class="btn btn-secondary-soft">
                    ← Regresar
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
