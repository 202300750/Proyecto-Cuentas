@model Cuentas.Models.Cuenta

@{
    ViewData["Title"] = "Eliminar";
}

<h1 class="text-center mb-4 text-danger">Eliminar Cuenta</h1>

<div class="delete-container">

    <div class="card shadow-sm p-4 border-danger-subtle">

        <div class="alert alert-danger-soft mb-4">
            <strong>Atención:</strong> Estás a punto de eliminar esta cuenta de manera permanente.
        </div>

        <h4 class="text-secondary mb-3">Detalles de la cuenta</h4>
        <hr />

        <div class="row mb-3">
            <div class="col-sm-4 fw-bold text-secondary">Número:</div>
            <div class="col-sm-8">@Model.numero</div>

            <div class="col-sm-4 fw-bold text-secondary mt-2">Descripción:</div>
            <div class="col-sm-8 mt-2">@Model.descripcion</div>

            <div class="col-sm-4 fw-bold text-secondary mt-2">Créditos:</div>
            <div class="col-sm-8 mt-2">@Model.creditos</div>

            <div class="col-sm-4 fw-bold text-secondary mt-2">Débitos:</div>
            <div class="col-sm-8 mt-2">@Model.debitos</div>

            <div class="col-sm-4 fw-bold text-secondary mt-2">Balance:</div>
            <div class="col-sm-8 mt-2">@Model.balance</div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-danger-soft px-4">
                   Eliminar definitivamente
                </button>

                <a asp-action="Index" class="btn btn-secondary-soft">
                    ← Regresar
                </a>
            </div>
        </form>

    </div>
</div>
